public class NumberPyramid {
    public static void main(String[] args) {
        int rows = 5; // Change this to set the number of rows in the pyramid

        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= rows - i; j++) {
                System.out.print(" ");
            }
            for (int k = 1; k <= 2 * i - 1; k++) {
                System.out.print(k);
            }
            System.out.println();
        }
    }
}
